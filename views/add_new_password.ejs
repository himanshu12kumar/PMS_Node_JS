<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script src="http://cdn.ckeditor.com/4.3.4/standard/ckeditor.js"></script>
    <style>
        a{
            text-decoration: none;
        }
    </style>
  </head>
  <body>
    <%- include('header') %>
    <div>
      <h4>Add New Password</h4> 
      <%  if(success!='') { %>
        <p><%= success %></p>
        <% } %>
      <form action="/add-new-password" method="POST">
        <div>
            <h4>Choose password category</h4>
            <select name="pass_cat" id="password">
                <option value="">Choose password category</option>
                <% if(records.length > 0) {
                    records.forEach(function(row){
                    %>
                <option value="<%= row.password_category %>"><%= row.password_category %></option>
                <% }) }  %>
            </select>
        </div>
        <h4>Project Name</h4>
        <input type="textbox" name="project_name" id="pro" placeholder="Enter your project name">
        <h4>Password Details</h3>
        <textarea name="pass_detail" id="editor" cols="30" rows="10"></textarea>
        <input type="submit" name="submit" value="Add Password" id="submit_btn">
        <p><a href="/view-all-password">View all password Lists</a></p>
      </form>
    </div>

    <%- include('footer') %>
    <script>
        CKEDITOR.replace('editor');
    </script>
  </body>
</html>
